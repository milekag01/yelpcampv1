<% include ../partials/header %>
    <div class="border">
        <h1 style="text-align:center;">Edit comment</h1>
        <form method="POST" action="/campground/<%=campground_id%>/comments/<%=foundcomment._id%>?_method=PUT">

            <div class="form-group form">
                <input class="form-control" type="text" name="comment[text]" value="<%=foundcomment.text%>">    
            </div>
            <div class="form-group form">
                <button class="btn btn-primary btn-block">Submit</button>    
            </div>
            
        </form>
        <div class="form-group form">
            <a href="/campground/<%=campground_id%>" class="btn btn-default btn-block"> Go Back </a>
        </div>
        
    </div>
    
